<h1>Listing orders</h1>

<table>  
  <tr class="list_header">
    <th>Name</th>
    <th>Address</th>
    <th>Email</th>
    <th>Pay type</th>
  </tr>

<% @orders.each do |order| %> 
    <tr class="table_row" id="<%=order.id%>">
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        <td class="list_actions">
          <td><%= link_to 'Show',  order_path(order.id) %></td>
          <td><%= link_to 'Edit', edit_order_path(order),  
                  remote: true %></td>
          <td><%= link_to 'Destroy', order_path(order) , method: :delete,
                  remote: true %></td>
        </td>
    </tr>
<% end %>
</table>

<br />

<%= link_to 'New Order', new_order_path %>
<p><%= will_paginate @orders %></p>


<div id="edit_form"></div>
